<!-- recipe.ejs -->
<%- include ('../partials/head') %>
    <%- include ('../partials/menu') %>

        <main class="container mt-4">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <img src="<%= data.recipeInfo.image %>" alt="<%= data.recipeInfo.title %>" class="card-img-top">
                        <div class="card-body">
                            <h1 class="card-title">
                                <%=data.recipeInfo.title %>
                            </h1>
                            <div class="recipe-details">
                                <p class="card-text">Servings: <%= data.recipeInfo.servings %>
                                </p>
                                <p class="card-text">Ready in: <%= data.recipeInfo.readyInMinutes %> minutes</p>
                                <!-- Add more details as needed -->
                            </div>

                            <div class="ingredients mt-4">
                                <h2>Ingredients:</h2>
                                <div class="list-group">
                                    <% data.recipeInfo.extendedIngredients.forEach((ingredient)=> { %>
                                        <div class="list-group-item">
                                            <span>
                                                <%= ingredient.original %>
                                            </span>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>


                            <div class="instructions mt-4">
                                <h2>Instructions:</h2>
                                <!-- You can use analyzedInstructions if available, or instructions if not -->
                                <%- data.recipeInfo.analyzedInstructions.length ? renderInstructions(data.recipeInfo.analyzedInstructions) :
                                    data.recipeInfo.instructions %>
                            </div>

                            <div class="recipe-summary mt-4">
                                <h2>Summary:</h2>
                                <p>
                                    <%- data.recipeInfo.summary %>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Include the comments section -->
                    <h1>Comment section</h1>
                    <%- include ('../partials/comments.ejs', { data: data }) %>
                </div>
            </div>
        </main>

        <%- include ('../partials/footer') %>

        <% function renderInstructions(instructions) { %>
            <ol>
                <% for (let i = 0; i < data.recipeInfo.analyzedInstructions.length; i++) { 
                    for (let j = 0; j < data.recipeInfo.analyzedInstructions[i].steps.length; j++){%>
                    <li>
                        <%= data.recipeInfo.analyzedInstructions[i].steps[j].step %>
                    </li>
                    <% }}; %>
            </ol>
            <% } %>